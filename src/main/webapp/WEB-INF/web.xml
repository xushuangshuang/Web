<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

<display-name>Welcome to Hello JDBC</display-name>
  <description>
     Welcome to Hello JDBC
  </description>
  <jsp-config>
	  <jsp-property-group>
		  <url-pattern>*.jsp</url-pattern>
		  <page-encoding>UTF-8</page-encoding>
	  </jsp-property-group>
  </jsp-config>

  <filter>
	  <filter-name>ConstantTypeFilter</filter-name>
	  <filter-class>com.bodejidi.ConstantTypeFilter</filter-class>
  </filter>
  <filter-mapping>
	  <filter-name>ConstantTypeFilter</filter-name>
	  <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
	  <servlet-name>practice</servlet-name>
	  <servlet-class>com.bodejidi.Web</servlet-class>
  </servlet>
  <servlet-mapping>
	  <servlet-name>practice</servlet-name>
	  <url-pattern>/practice</url-pattern>
  </servlet-mapping>
</web-app>
